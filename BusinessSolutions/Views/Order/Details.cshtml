@model BusinessSolutions.Models.Order

@{
    ViewData["Title"] = "Details";
}

<header>Информация о заказе</header>

<section class="detailsSection">
    <div class="btn-right">
        <a asp-action="Create" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-info">Редактировать</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger">Удалить</a>
    </div>

    <table class="head">
        <tbody>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Number)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Number)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Date)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Date)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Provider)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Provider.Name)
                </td>
            </tr>
        </tbody>
    </table>

    <table class="table table-sm table-dark incrementRow">
        <thead>
            <tr>
                <th>#</th>
                <th>Название</th>
                <th>Продукт</th>
                <th>Количество</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td class="increment"></td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</section>
